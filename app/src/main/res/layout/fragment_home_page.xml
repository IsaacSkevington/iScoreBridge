<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/joingamebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/login_48px"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/colorPrimary"
        app:fabCustomSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="64dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/play_arrow_48px"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/colorPrimary"
        app:fabCustomSize="100dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/joingamebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="64dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/joinspectatorbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/visibility_48px"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/colorPrimary"
        app:fabCustomSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joingamebutton"
        app:maxImageSize="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>