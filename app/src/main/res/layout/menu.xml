<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/selected"
    android:dividerPadding="20sp"
    android:orientation="vertical"
    android:visibility="visible">

        <Button
            android:id="@+id/addPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:padding="20sp"
            android:shadowColor="#000000"
            android:text="Add Player"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/findPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:padding="20sp"
            android:shadowColor="#000000"
            android:text="Find Player"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/importPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:padding="20sp"
            android:shadowColor="#000000"
            android:text="Import Players"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/exportPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:padding="20sp"
            android:shadowColor="#000000"
            android:text="Export Players"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:padding="20sp"
            android:shadowColor="#000000"
            android:text="Settings"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:padding="20sp"
            android:layout_marginBottom="5sp"
            android:shadowColor="#000000"
            android:text="About"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/testingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:padding="20sp"
            android:shadowColor="#000000"
            android:text="Test"
            android:textColor="#FFFFFF" />


</LinearLayout>